@model SIMS.Models.Course

@{
    ViewData["Title"] = "Chi Tiết Khóa Học";
}

<h1>@Model.Name</h1>

<div>
    <h4>Thông tin khóa học</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

@* Hiển thị thông báo thành công hoặc lỗi sau khi đăng ký *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


@* ========================================================== *@
@*           HIỂN THỊ NÚT ĐĂNG KÝ CHO SINH VIÊN               *@
@* ========================================================== *@
@if (User.IsInRole("Student"))
{
    <div class="mt-4">
        <form asp-controller="StudentCourse" asp-action="Enroll" method="post">
            <input type="hidden" name="courseId" value="@Model.Id" />
            <button type="submit" class="btn btn-lg btn-success">Đăng Ký Khóa Học Này</button>
        </form>
    </div>
}


<div class="mt-4">
    @* Link này quay về trang danh sách khóa học trong TeacherController *@
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>