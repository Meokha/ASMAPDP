@model SIMS.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Course Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

@* Display success or error messages after registration *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@* ========================================================== *@
@*           DISPLAY ENROLL BUTTON FOR STUDENTS               *@
@* ========================================================== *@
@if (User.IsInRole("Student"))
{
    <div class="mt-4">
        <form asp-controller="StudentCourse" asp-action="Enroll" method="post">
            <input type="hidden" name="courseId" value="@Model.Id" />
            <button type="submit" class="btn btn-lg btn-success">Enroll in This Course</button>
        </form>
    </div>
}
<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Course List</a>
</div>