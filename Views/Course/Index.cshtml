@model IEnumerable<SIMS.Models.Course>
@{
    ViewData["Title"] = "Course Management";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="bi bi-journal-bookmark-fill"></i> Course Management</h2>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="bi bi-journal-plus"></i> Add Course</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th><i class="bi bi-journal"></i> Course Name</th>
                <th><i class="bi bi-card-text"></i> Description</th>
                <th><i class="bi bi-gear"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td><span class="badge bg-warning text-dark">@c.Name</span></td>
                    <td>@c.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = c.Id })" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a href="@Url.Action("Delete", new { id = c.Id })" 
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('You want to delete this course?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
