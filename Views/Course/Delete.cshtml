@model SIMS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-primary">@ViewData["Title"]</h1>

<h3 class="text-danger">Are you sure you want to delete this course?</h3>
<p class="text-danger">This action cannot be undone.</p>

<div>
    <h4 class="text-secondary">Course Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            <i class="bi bi-journal"></i> Course Name
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-3">
            <i class="bi bi-card-text"></i> Description
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </form>
</div>