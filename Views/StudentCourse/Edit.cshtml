@model SIMS.Models.StudentCourse

@{
    ViewData["Title"] = "Assignment Edit";
    var students = ViewBag.Students as IEnumerable<SIMS.Models.Student>;
    var courses = ViewBag.Courses as IEnumerable<SIMS.Models.Course>;
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
             @Html.AntiForgeryToken()
             
             <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" name="originalStudentId" value="@Model.StudentId" />
            <input type="hidden" name="originalCourseId" value="@Model.CourseId" />

            <div class="mb-3">
                <label for="newStudentId" class="form-label">Student</label>
                <select name="newStudentId" class="form-select" required>
                    @if (students != null)
                    {
                        @foreach (var student in students)
                        {
                            @if (Model.StudentId == student.Id)
                            {
                                <option value="@student.Id" selected>@student.FullName (@student.StudentCode)</option>
                            }
                            else
                            {
                                <option value="@student.Id">@student.FullName (@student.StudentCode)</option>
                            }
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="newCourseId" class="form-label">Course</label>
                <select name="newCourseId" class="form-select" required>
                    @if (courses != null)
                    {
                        @foreach (var course in courses)
                        {
                            @if (Model.CourseId == course.Id)
                            {
                                <option value="@course.Id" selected>@course.Name</option>
                            }
                            else
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            
            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>