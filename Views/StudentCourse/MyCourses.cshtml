@model IEnumerable<SIMS.Models.Course>

@{
    ViewData["Title"] = "Khóa Học Của Tôi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="bi bi-journal-check"></i> @ViewData["Title"]</h2>
</div>

<div class="table-responsive">
    @* === BẮT ĐẦU PHẦN SỬA LỖI VÀ CẢI THIỆN === *@

    @* 1. Kiểm tra xem Model có null hoặc rỗng không *@
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th><i class="bi bi-journal"></i> Tên Khóa Học</th>
                    <th><i class="bi bi-card-text"></i> Mô Tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td><span class="badge bg-success">@c.Name</span></td>
                        <td>@c.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        @* 2. Hiển thị thông báo thân thiện nếu không có khóa học *@
        <div class="alert alert-info text-center">
            <p>Bạn chưa đăng ký khóa học nào.</p>
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Xem danh sách và đăng ký ngay!</a>
        </div>
    }
    
    @* === KẾT THÚC PHẦN SỬA LỖI VÀ CẢI THIỆN === *@
</div>