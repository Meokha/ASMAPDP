@model IEnumerable<SIMS.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="bi bi-journal-check"></i> @ViewData["Title"]</h2>
</div>

<div class="table-responsive">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th><i class="bi bi-journal"></i> Course Name</th>
                    <th><i class="bi bi-card-text"></i> Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td><span class="badge bg-success">@c.Name</span></td>
                        <td>@c.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            <p>You have not enrolled in any courses.</p>
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">View courses and enroll now!</a>
        </div>
    }
</div>