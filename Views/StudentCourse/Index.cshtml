@model IEnumerable<SIMS.Models.StudentCourse>

@{
    ViewData["Title"] = "Xếp Lớp Sinh Viên";
    // Thay vì dùng biến trung gian, chúng ta sẽ kiểm tra trực tiếp ViewBag
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4>Gán Sinh Viên vào Khóa Học</h4>
            </div>
            <div class="card-body">
                <form asp-action="Assign" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="studentId" class="form-label">Chọn Sinh Viên</label>
                        <select name="studentId" id="studentId" class="form-select" required>
                            <option value="">-- Vui lòng chọn --</option>

                            @* === BẮT ĐẦU PHẦN SỬA QUAN TRỌNG === *@
                            @if (ViewBag.Students != null)
                            {
                                @* Ép kiểu trực tiếp trong vòng lặp để chắc chắn *@
                                @foreach (var student in (IEnumerable<SIMS.Models.Student>)ViewBag.Students)
                                {
                                    <option value="@student.Id">@student.FullName (@student.StudentCode)</option>
                                }
                            }
                            @* === KẾT THÚC PHẦN SỬA QUAN TRỌNG === *@
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="courseId" class="form-label">Chọn Khóa Học</label>
                        <select name="courseId" id="courseId" class="form-select" required>
                            <option value="">-- Vui lòng chọn --</option>
                            @if (ViewBag.Courses != null)
                            {
                                @foreach (var course in (IEnumerable<SIMS.Models.Course>)ViewBag.Courses)
                                {
                                    <option value="@course.Id">@course.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Gán</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h4>Danh Sách Đã Gán</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sinh Viên</th>
                    <th>Khóa Học</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Student.FullName</td>
                            <td>@item.Course.Name</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-studentId="@item.StudentId" asp-route-courseId="@item.CourseId"
                                    class="btn btn-sm btn-warning">Sửa</a>
                                <text> | </text>

                                @* === THÊM CLASS "d-inline-block" VÀO ĐÂY === *@
                                <form asp-action="Delete" method="post" class="d-inline-block"
                                    onsubmit="return confirm('Bạn có chắc muốn xóa bản ghi này?');">
                                    <input type="hidden" name="studentId" value="@item.StudentId" />
                                    <input type="hidden" name="courseId" value="@item.CourseId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Chưa có sinh viên nào được gán vào khóa học.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>