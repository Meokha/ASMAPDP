@model IEnumerable<SIMS.Models.StudentCourse>

@{
    ViewData["Title"] = "Student Placement";
    // Instead of using an intermediate variable, we will check ViewBag directly.
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4>Assign Student to Course</h4>
            </div>
            <div class="card-body">
                <form asp-action="Assign" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="studentId" class="form-label">Select Student</label>
                        <select name="studentId" id="studentId" class="form-select" required>
                            <option value="">-- Please select --</option>

                            @* === START IMPORTANT FIX SECTION === *@
                            @if (ViewBag.Students != null)
                            {
                                @* Cast directly in the loop to ensure correct type *@
                                @foreach (var student in (IEnumerable<SIMS.Models.Student>)ViewBag.Students)
                                {
                                    <option value="@student.Id">@student.FullName (@student.StudentCode)</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="courseId" class="form-label">Select Course</label>
                        <select name="courseId" id="courseId" class="form-select" required>
                            <option value="">-- Please select --</option>
                            @if (ViewBag.Courses != null)
                            {
                                @foreach (var course in (IEnumerable<SIMS.Models.Course>)ViewBag.Courses)
                                {
                                    <option value="@course.Id">@course.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Assign</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h4>Assigned List</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Student.FullName</td>
                            <td>@item.Course.Name</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-studentId="@item.StudentId" asp-route-courseId="@item.CourseId"
                                    class="btn btn-sm btn-warning">Edit</a>
                                <text> | </text>
                                <a asp-action="Delete" asp-route-studentId="@item.StudentId" asp-route-courseId="@item.CourseId"
                                    class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No students assigned to any course.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>