@model IEnumerable<SIMS.Models.Student>
@{
    ViewData["Title"] = "Quản lý sinh viên";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="bi bi-people-fill"></i> Student Management</h2>
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="bi bi-person-plus-fill"></i> Add Student</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th><i class="bi bi-person-badge"></i> Username</th>
                <th><i class="bi bi-hash"></i> Student Code</th> 
                <th><i class="bi bi-person"></i> Full Name</th>
                <th><i class="bi bi-envelope"></i> Email</th>
                <th><i class="bi bi-gear"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td><span class="badge bg-info text-dark">@s.User?.Username</span></td>
                    <td>@s.StudentCode</td>
                    <td>@s.FullName</td>
                    <td>@s.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = s.Id })" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a href="@Url.Action("Delete", new { id = s.Id })"
                        class="btn btn-danger btn-sm"
                        onclick="return confirm('You want to delete this student?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
