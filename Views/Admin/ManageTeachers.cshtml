@model IEnumerable<SIMS.Models.Teacher>

@{
    ViewData["Title"] = "Teacher Management";
}

<h1>@ViewData["Title"]</h1>

<p>
    @* We will need to create an action for creating a Teacher later *@
    @* <a asp-action="CreateTeacher" class="btn btn-primary">Add New Teacher</a> *@
</p>

@if (!Model.Any())
{
    <p>No teacher data available.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Specialization
                </th>
                <th>
                    Username
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td>
                        @(item.User?.Username ?? "N/A")
                    </td>
                    <td>
                        @* These links need to be implemented in the future *@
                        @* <a asp-action="EditTeacher" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a> |
                        <a asp-action="DetailsTeacher" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a> |
                        <a asp-action="DeleteTeacher" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a> *@
                        <span>No actions available</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}