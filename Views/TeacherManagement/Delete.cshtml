@model SIMS.Models.Teacher

@{
    ViewData["Title"] = "Xác nhận Xóa Giáo Viên";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <h4>Giáo viên: @Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Họ Tên</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
        
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-3">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Username)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>