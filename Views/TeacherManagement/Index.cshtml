@model IEnumerable<SIMS.Models.Teacher>
@{ ViewData["Title"] = "Quản Lý Giáo Viên"; }

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Thêm Giáo viên mới</a>
</div>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Chuyên ngành</th>
            <th>Tên đăng nhập</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Specialization</td>
                <td>@(item.User?.Username ?? "N/A")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>