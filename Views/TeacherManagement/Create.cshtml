@model SIMS.Models.Teacher

@{
    ViewData["Title"] = "Thêm Giáo Viên Mới";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            @* Dòng này cực kỳ quan trọng, nó sẽ hiển thị tất cả lỗi *@
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <h4>Thông tin cá nhân</h4>
            <div class="form-group mb-2">
                <label class="control-label">Họ và Tên</label>
                <input name="fullName" class="form-control" value="@ViewData["FullName"]" />
            </div>
             <div class="form-group mb-3">
                <label class="control-label">Chuyên ngành</label>
                <input name="specialization" class="form-control" value="@ViewData["Specialization"]" />
            </div>

            <hr/>
            <h4>Thông tin tài khoản</h4>
             <div class="form-group mb-2">
                <label class="control-label">Email</label>
                <input name="email" type="email" class="form-control" value="@ViewData["Email"]" required />
            </div>
             <div class="form-group mb-2">
                <label class="control-label">Tên Đăng Nhập</label>
                <input name="username" class="form-control" value="@ViewData["Username"]" required />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Mật Khẩu</label>
                <input name="password" type="password" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}