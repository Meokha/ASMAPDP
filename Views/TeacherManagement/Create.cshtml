@model SIMS.Models.Teacher

@{
    ViewData["Title"] = "Add New Teacher";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <h4>Personal Information</h4>
            <div class="form-group mb-2">
                <label class="control-label">Full Name</label>
                <input name="fullName" class="form-control" value="@ViewData["FullName"]" />
            </div>
             <div class="form-group mb-3">
                <label class="control-label">Specialization</label>
                <input name="specialization" class="form-control" value="@ViewData["Specialization"]" />
            </div>

            <hr/>
            <h4>Account Information</h4>
             <div class="form-group mb-2">
                <label class="control-label">Email</label>
                <input name="email" type="email" class="form-control" value="@ViewData["Email"]" required />
            </div>
             <div class="form-group mb-2">
                <label class="control-label">Username</label>
                <input name="username" class="form-control" value="@ViewData["Username"]" required />
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Password</label>
                <input name="password" type="password" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}