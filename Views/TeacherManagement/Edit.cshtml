@model SIMS.Models.Teacher

@{
    ViewData["Title"] = "Edit Teacher";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />

            <h4>Personal Information</h4>
            <div class="form-group mb-2">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <hr />
            <h4>Account Information</h4>
            <div class="form-group mb-2">
                <label class="control-label">Email</label>
                <input name="email" type="email" class="form-control" value="@Model.User.Email" required />
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Username</label>
                <input name="username" class="form-control" value="@Model.User.Username" required />
                 <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>