@{
    ViewData["Title"] = "Register";
    Layout = null; 
}
<link rel="stylesheet" href="~/css/register-form.css" />
<body class="register-bg">
<div class="row justify-content-center mt-5 register-page">
    <div class="col-md-6">
        <div class="card shadow register-card">
            <div class="card-header register-card-header">
                <h3><i class="bi bi-person-plus-fill"></i> Register</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="register-form-group">
                        <input type="text" name="username" class="register-form-control" required placeholder=" " />
                        <label class="register-form-label">Username</label>
                    </div>
                    <div class="register-form-group">
                        <input type="password" name="password" class="register-form-control" required placeholder=" " />
                        <label class="register-form-label">Password</label>
                    </div>
                    <div class="register-form-group">
                        <input type="text" name="fullName" class="register-form-control" required placeholder=" " />
                        <label class="register-form-label">Full Name</label>
                    </div>
                    <div class="register-form-group">
                        <input type="email" name="email" class="register-form-control" required placeholder=" " />
                        <label class="register-form-label">Email</label>
                    </div>
                    <button type="submit" class="btn register-btn-success mb-2">
                        <i class="bi bi-person-plus-fill"></i> Register
                    </button>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="@Url.Action("Login", "Account")" class="register-login-link">
                            <i class="bi bi-arrow-left-circle"></i> already have an account? Go back to login
                        </a>
                    </div>
                </form>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</body>